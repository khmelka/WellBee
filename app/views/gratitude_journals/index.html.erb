<h1><%= link_to 'WellBee 🐝', users_path %></h1>
<p id="notice"><%= notice %></p>

<h2>Gratitude Journals</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gratitude_journals.each do |gratitude_journal| %>
      <tr>
        <td><%= gratitude_journal.title %></td>
        <td><%= gratitude_journal.content %></td>
        <td><%= gratitude_journal.user %></td>
        <td><%= link_to 'Show', gratitude_journal %></td>
        <td><%= link_to 'Edit', edit_gratitude_journal_path(gratitude_journal) %></td>
        <td><%= link_to 'Destroy', gratitude_journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gratitude Journal', new_gratitude_journal_path %>
